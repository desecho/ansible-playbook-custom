# Common
    # Fix numeric keypad in nano
    alias nano='nano -K'
    alias upgrade='apt-get update && apt-get upgrade'
    alias bower='bower --allow-root'
    alias lsa='ls -lah'2222

# Git
    # direct
    alias push='git push'
    alias pull='git pull'
    alias fetch='git fetch'
    alias rebase='git rebase'
    alias merge='git merge'
    alias checkout='git checkout'
    alias branch='git branch'
    alias reset='git reset'
    alias stash='git stash'
    alias commit='git commit'
    alias diff='git diff'
    alias add='git add'
    alias status='git status'
    alias log='git log'

    # custom
    alias write='git add .;git commit -m'
    alias revert='git checkout --'
    alias amend='git commit --amend -m'
    alias new='git checkout -b'

# Provisioning
    {% if is_dev -%}
        alias provision='cd {{ home }}/ansible-playbook-server && ./provision_dev.sh'
        alias provisionall='cd {{ home }}/ansible-playbook-server && ./provision_all.sh dev'
    {%- endif %}
    {% if is_prod -%}
        alias provision='cd {{ home }}/ansible-playbook-server && ./bootstrap.sh && ./provision_prod.sh'
        alias provisionall='cd {{ home }}/ansible-playbook-server && ./bootstrap.sh && ./provision_all.sh prod'
    {%- endif %}

# Custom
    alias deploy='{{ scripts_path }}/deploy.sh'
    alias manage='./manage.py'

