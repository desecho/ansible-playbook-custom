    alias develop='{{ scripts_path }}/develop.sh'
    alias tox='{{ scripts_path }}/tox.sh'
    alias makemessages='{{ scripts_path }}/makemessages.sh'
    alias write='{{ scripts_path }}/fastcommit.sh'
{%- endif %}

