alias nano="nano -K"  # Fix numeric keypad in nano
alias bower="bower --allow-root"
alias wget='wget -c'  # Resume wget by default
alias df='df -H'
alias cp='cp -r'
alias free='free -h'

{% if is_dev -%}

# Fix cd for ubuntu machine for root
cd () {
    if [ $# = 0 ]; then
        builtin cd /vagrant
    else
        builtin cd "$@"
    fi
}

{%- endif %}

